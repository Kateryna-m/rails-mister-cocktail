<div class="container text-center">

  <h3> <%= @cocktail.name %> </h3>
  <div class="card-container">
    <div class="card"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
    url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
    <div class="card-category"></div>
    <div class="card-description">
      <!--       <p>Very cool stuff, useful and smart</p> -->
    </div>
    <a class="card-link" href="#" ></a>

    <% @cocktail.doses.each do |dose| %>
    <p class="white text-center"><%= dose.description %> of <%= dose.ingredient.name %></p>
    <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
    <% end %>
  </div>
</div>

<p><%= link_to 'add dose', new_cocktail_dose_path(@cocktail), class: "btn btn-danger"  %></p>
<p><%= link_to '  back ', cocktails_path, class: "btn btn-danger"%></p>


</div>

